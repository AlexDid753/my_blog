<h1>Новая заметка</h1>
<%= form_for :post, url: posts_path do |f| %>

    <p>
      <%= f.label :title, 'Название заметки' %><br>
      <%= f.text_field :title, class: "form-control" %>
    </p>

    <p>
      <%= f.label :text, 'Содержание заметки' %><br>
      <%= f.text_area :text, class: "form-control", rows: 10  %>
    </p>

    <p>
      <%= f.label :theme, 'Тип заметки' %><br>
      <%= f.select :theme, options_for_select([['Жизнь', 'life'], ['Работа', 'work']]),{}, {class: 'form-control form-control-lg'} %>
    </p>

    <p>
      <%= f.submit 'Сохранить', class: "btn btn-primary" %>
    </p>
<% end %>
