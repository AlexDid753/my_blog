<h3>Оставить комментарий</h3>
<p>Find me in app/views/comments/new.html.erb</p>
<%= form_for :comment, url: comments_path do |f| %>

    <p>
      <%= f.text_area :content, class: "form-control", rows: 10  %>
    </p>

    <p>
      <%= f.submit 'Сохранить', class: "btn btn-primary" %>
    </p>

<% end %>