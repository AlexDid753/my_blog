<h1>Sign Up</h1>

<%= form_for @user do |f| %>
    <% if @user.errors.any? %>
        <div class="error_messages">
          <h2>Форма содержит ошибки</h2>
          <ul>
            <% for message in @user.errors.full_messages %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <p>
      <%= f.label :nickname, 'Никнейм' %><br />
      <%= f.text_field :nickname %>
    </p>
    <p>
      <%= f.label :email, 'E-Mail' %><br />
      <%= f.text_field :email %>
    </p>
    <p>
      <%= f.label :password, 'Пароль' %><br />
      <%= f.password_field :password %>
    </p>
    <p>
      <%= f.label :password_confirmation, 'Подтврждение пароля' %><br />
      <%= f.password_field :password_confirmation %>
    </p>
    <p class="button"><%= f.submit 'Подтвердить информацию' %></p>
<% end %>